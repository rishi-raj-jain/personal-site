---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";

import SkillDescription from "@components/SkillDescription.astro";
import SkillPill from "@components/SkillPill.astro";
---

<Layout
  title="Christian Tanul: Personal Site"
  description="I've 6 years of experience writing code, lots of passion and little free time.">
  <div
    class="my-12 flex flex-col-reverse items-center justify-between gap-6 lg:my-24 lg:flex-row">
    <div class="text-center lg:text-start">
      <div>
        <h1 class="mb-4 text-4xl font-semibold lg:text-6xl">Hi, I'm Chris.</h1>
        <p class="max-w-xl text-base text-zinc-800/90">
          I've 6 years of experience writing code, lots of passion and little
          free time.
        </p>
      </div>

      <div class="hidden gap-2 md:mt-6 lg:flex">
        <SkillPill title="Full Stack" icon="ri:stack-fill" />
        <SkillPill title="UI/UX" icon="ri:bard-fill" />
        <SkillPill title="AI Integrations" icon="ri:robot-2-fill" />
      </div>
    </div>
    <img
      src="/christian-tanul-picture.webp"
      alt="Christian Tanul Picture"
      class="size-[160px] rounded-full border border-zinc-600 object-cover transition-all md:size-[240px] lg:h-auto lg:w-[400px] lg:rounded-[4.5rem] lg:object-center lg:shadow-lg"
    />
  </div>

  <section
    class="mx-auto space-y-8 rounded-3xl border border-zinc-600 bg-zinc-100/80 p-8 lg:grid lg:w-auto lg:grid-cols-3 lg:gap-20 lg:space-y-0 lg:shadow-lg">
    <SkillDescription
      title="Full Stack"
      description="After completing many projects from start to finish, I'm comfortable with both the back-end & the front-end."
      icon="ri:stack-fill"
    />
    <SkillDescription
      title="UI/UX"
      description="Having done lots of work requiring a good eye for design, I've developed a strong sense of aesthetics."
      icon="ri:bard-fill"
    />
    <SkillDescription
      title="AI Integrations"
      description="I'm a big fan of the GPT API and have integrated it into several projects, both personal and for clients."
      icon="ri:robot-2-fill"
    />
  </section>

  <div
    class="mt-24 flex max-w-md flex-col items-center justify-center gap-2 text-center lg:items-start lg:gap-4 lg:text-start">
    <h3 class="text-4xl font-semibold">Projects</h3>
    <p class="text-zinc-800/90">
      Take a look below at some of my featured work for clients from the past
      few years.
    </p>
  </div>
</Layout>
